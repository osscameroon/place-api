{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "angular",
      "releaseRules": [
        {"type": "docs", "scope": "README", "release": "patch"},
        {"type": "refactor", "release": "patch"},
        {"type": "style", "release": "patch"},
        {"type": "perf", "release": "patch"},
        {"type": "ci", "release": "patch"}
      ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
      }
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "angular",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "âœ¨ Features"},
          {"type": "fix", "section": "ğŸ› Bug Fixes"},
          {"type": "perf", "section": "âš¡ï¸ Performance Improvements"},
          {"type": "revert", "section": "âª Reverts"},
          {"type": "docs", "section": "ğŸ“š Documentation"},
          {"type": "style", "section": "ğŸ’ Styles"},
          {"type": "refactor", "section": "â™»ï¸ Code Refactoring"},
          {"type": "test", "section": "ğŸ§ª Tests"},
          {"type": "build", "section": "ğŸ“¦ Build System"},
          {"type": "ci", "section": "ğŸ”§ Continuous Integration"},
          {"type": "chore", "hidden": true}
        ]
      },
      "writerOpts": {
        "groupBy": "type",
        "commitGroupsSort": "title",
        "commitsSort": "header",
        "noteGroupsSort": "title"
      },
      "linkCompare": true,
      "linkReferences": true
    }],
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md",
      "changelogTitle": "# ğŸ“‹ Changelog\n\n*All notable changes to this project will be documented in this file.*"
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    ["@semantic-release/github", {
      "successComment": "ğŸ‰ This PR is included in version ${nextRelease.version}",
      "failTitle": "âŒ Release Failed",
      "failComment": "The release workflow has failed. Please check the logs.",
      "labels": ["release"],
      "releasedLabels": ["âœ… released"],
      "assets": []
    }]
  ],
  "preset": {
    "name": "angular",
    "types": [
      {"type": "feat", "section": "âœ¨ Features"},
      {"type": "fix", "section": "ğŸ› Bug Fixes"},
      {"type": "perf", "section": "âš¡ï¸ Performance Improvements"},
      {"type": "revert", "section": "âª Reverts"},
      {"type": "docs", "section": "ğŸ“š Documentation"},
      {"type": "style", "section": "ğŸ’ Styles"},
      {"type": "refactor", "section": "â™»ï¸ Code Refactoring"},
      {"type": "test", "section": "ğŸ§ª Tests"},
      {"type": "build", "section": "ğŸ“¦ Build System"},
      {"type": "ci", "section": "ğŸ”§ Continuous Integration"}
    ]
  }
}